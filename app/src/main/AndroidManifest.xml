<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="sotiris.sotiris_vassou" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/dogcat"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".FoundActivity"
            android:label="@string/title_activity_found"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="sotiris.sotiris_vassou.MainActivity" />
        </activity>
        <activity
            android:name=".FoundActivity2"
            android:label="@string/title_activity_found2"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".MissingActivity"
            android:label="@string/title_activity_missing"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="sotiris.sotiris_vassou.MainActivity" />
        </activity>
    </application>

</manifest>
